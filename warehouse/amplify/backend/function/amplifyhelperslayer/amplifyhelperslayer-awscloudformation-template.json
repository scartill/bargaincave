{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda layer resource stack creation using Amplify CLI",
  "Parameters": {
    "layerVersion": {
      "Type": "String",
      "Default": "1"
    },
    "env": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "deploymentBucketName": {
      "Type": "String"
    }
  },
  "Resources": {
    "LambdaLayer": {
      "Type": "AWS::Lambda::LayerVersion",
      "Properties": {
        "CompatibleRuntimes": [
          "python3.8"
        ],
        "Content": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "Description": {
          "Fn::Sub": [
            "Lambda layer version ${latestVersion}",
            {
              "latestVersion": {
                "Ref": "layerVersion"
              }
            }
          ]
        },
        "LayerName": {
          "Fn::Sub": [
            "amplifyhelperslayer-${env}",
            {
              "env": {
                "Ref": "env"
              }
            }
          ]
        }
      },
      "DeletionPolicy": "Retain",
      "UpdateReplacePolicy": "Retain"
    },
    "LambdaLayerPermissionpublic1": {
      "Type": "AWS::Lambda::LayerVersionPermission",
      "Properties": {
        "Action": "lambda:GetLayerVersion",
        "LayerVersionArn": {
          "Fn::Sub": [
            "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:layer:${layerName}-${env}:${layerVersion}",
            {
              "layerName": "amplifyhelperslayer",
              "env": {
                "Ref": "env"
              },
              "layerVersion": "1"
            }
          ]
        },
        "Principal": "*"
      }
    },
    "LambdaLayerPermissionpublic2": {
      "Type": "AWS::Lambda::LayerVersionPermission",
      "Properties": {
        "Action": "lambda:GetLayerVersion",
        "LayerVersionArn": {
          "Fn::Sub": [
            "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:layer:${layerName}-${env}:${layerVersion}",
            {
              "layerName": "amplifyhelperslayer",
              "env": {
                "Ref": "env"
              },
              "layerVersion": "2"
            }
          ]
        },
        "Principal": "*"
      }
    },
    "LambdaLayerPermissionpublic3": {
      "Type": "AWS::Lambda::LayerVersionPermission",
      "Properties": {
        "Action": "lambda:GetLayerVersion",
        "LayerVersionArn": {
          "Fn::Sub": [
            "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:layer:${layerName}-${env}:${layerVersion}",
            {
              "layerName": "amplifyhelperslayer",
              "env": {
                "Ref": "env"
              },
              "layerVersion": "3"
            }
          ]
        },
        "Principal": "*"
      }
    },
    "LambdaLayerPermissionpublic4": {
      "Type": "AWS::Lambda::LayerVersionPermission",
      "Properties": {
        "Action": "lambda:GetLayerVersion",
        "LayerVersionArn": {
          "Ref": "LambdaLayer"
        },
        "Principal": "*"
      }
    }
  },
  "Conditions": {
    "HasEnvironmentParameter": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {
              "Ref": "env"
            },
            "NONE"
          ]
        }
      ]
    }
  },
  "Outputs": {
    "Arn": {
      "Value": {
        "Ref": "LambdaLayer"
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}